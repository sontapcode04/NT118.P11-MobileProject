<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageAo3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:src="@drawable/statusbar" />

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="359dp"
        android:layout_height="46dp"
        android:layout_below="@+id/imageAo3"
        android:layout_centerHorizontal="true"
        android:elevation="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Thêm các thành phần vào LinearLayout -->
            <ImageView
                android:id="@+id/icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription=""
                android:src="@drawable/back_arrow"
                android:clickable="true"/>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:text="Set your password"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </Toolbar>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="97dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo" />
    
    <LinearLayout
        android:id="@+id/tvLinearMail"
        android:layout_below="@+id/logo"
        android:orientation="vertical"
        android:layout_width="343dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp" >

        <TextView
            android:id="@+id/tvYour_vertification_code_is_sent_by_email"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Your verification code is sent by email to"
            android:textAlignment="center"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:clickable="true"
                android:text="22521249@gm.uit.edu.vn"
                android:textAlignment="center"
                android:textColor="#003A8C"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:id="@+id/numbercode"
        android:layout_below="@+id/tvLinearMail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        
        <EditText
            android:id="@+id/square1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/square">

        </EditText>

        <EditText
            android:id="@+id/square2"
            android:layout_toRightOf="@+id/square1"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:layout_marginLeft="15.5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/square">
        </EditText>

        <EditText
            android:id="@+id/square3"
            android:layout_toRightOf="@+id/square2"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:layout_marginLeft="15.5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/square">
        </EditText>

        <EditText
            android:id="@+id/square4"
            android:layout_toRightOf="@+id/square3"
            android:layout_marginLeft="15.5dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/square">
        </EditText>

        <EditText
            android:id="@+id/square5"
            android:layout_toRightOf="@+id/square4"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:layout_marginLeft="15.5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/square">
        </EditText>

    </RelativeLayout>

    <Button
        android:id="@+id/update_button"
        android:layout_below="@+id/numbercode"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="Update Password" />

    <RelativeLayout
        android:id="@+id/relativeResentmail"
        android:layout_below="@+id/update_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="343dp"
        android:layout_height="22dp">

        <TextView
            android:id="@+id/tvdid_not_receive_the_code"
            android:layout_width="200dp"
            android:layout_height="22dp"
            android:text="Did not receive the code? "
            android:textAlignment="textEnd">

        </TextView>

        <TextView
            android:id="@+id/tvReceiveMail"
            android:layout_toRightOf="@+id/tvdid_not_receive_the_code"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="Resend mail"
            android:textColor="#003A8C"
            android:textStyle="bold"
            android:clickable="true">

        </TextView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:src="@drawable/navigation" />

</RelativeLayout>