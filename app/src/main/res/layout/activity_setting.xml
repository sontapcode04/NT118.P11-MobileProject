<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".setting">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/coner1"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile Image"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="209dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nguyễn Văn A"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19522172@gm.uit.edu.vn"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="Star Icon"
            android:src="@drawable/img_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="3999"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="218dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imgaccount"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="217dp"
                android:layout_toStartOf="@+id/imgaccount1"
                android:text="Profile"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/imgaccount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_24">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@id/imgpassword"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_3">

            </ImageView>

            <TextView
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="135dp"
                android:layout_toStartOf="@+id/imgpassword"
                android:text="Change password"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/imgpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_24">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imgreward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_4">

            </ImageView>

            <TextView
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="135dp"
                android:layout_toStartOf="@+id/imgreward"
                android:text="Reward"
                android:textStyle="bold">


            </TextView>

            <ImageView
                android:id="@+id/imgreward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_24"
                tools:ignore="DuplicateIds">

            </ImageView>

            <ProgressBar
                android:id="@+id/progressReward"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/shape_btn" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtsetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="system settings"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imglanguage1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_5">

            </ImageView>

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="180dp"
                android:layout_toStartOf="@+id/imglanguage"
                android:text="Language"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/imglanguage"
                android:text="English">


            </TextView>

            <ImageView
                android:id="@+id/imglanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_24">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imglogout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imglogout1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_6">

            </ImageView>

            <TextView
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="133dp"
                android:layout_toStartOf="@+id/imglogout"
                android:text="Log out"
                android:textColor="#E72323"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/imglogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right_24">

            </ImageView>
        </RelativeLayout>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp">
<!--        app:constrainEnd_toEndOf="parent"-->
<!--        app:layout_constrainStart_toStartOf="parent"-->
<!--        app:layout_constrainBottom_toBottomOf="parent">-->


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/img_8" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="-10dp"
                    app:srcCompat="@drawable/img_7" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/img_9" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>
